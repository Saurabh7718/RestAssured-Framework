<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN" name="PropertiesConfig">
    <Properties>
        <Property name="basepath">./logs</Property>
    </Properties>

    <Appenders>
        <Console name="STDOUT" target="SYSTEM_OUT">
            <PatternLayout pattern="[%-5level] %d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %c{1} - %msg%n" />
        </Console>
        <RollingFile name="File" fileName="${basepath}/automation.log"
            filePattern="${basepath}/automation-%d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %c{1} - %msg%n">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %c{1} - %msg%n" />
            <SizeBasedTriggeringPolicy size="500000" />
        </RollingFile>
    </Appenders>

    <Loggers>
        <Logger name="StepDef" level="ALL" additivity="false">
            <AppenderRef ref="File" />
        </Logger>

        <Root level="DEBUG">
            <AppenderRef ref="File" />
        </Root>
    </Loggers>
</Configuration>
